        <TextBlock x:Name="textBlock_Copy1" HorizontalAlignment="Left" Height="41" Margin="403,175,0,0" TextWrapping="Wrap" Text="Digrams:" VerticalAlignment="Top" Width="119"/>

    </Grid>
</Window>
